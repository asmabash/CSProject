import java.util.*;
public class Admin extends User {
	
	// attributes
	private String status;
	private double salary;
	
	
	// methods
	public Admin (String name, int age, String email, String status, double salary)
	{
		super(name, age, email);
		this.status = status;
		this.salary = salary;
		
	}
	
	boolean removeCustomer(List<Customer> customerList, String ID)
	{
		//loop to find intended customer then delete from list
		boolean removed = false;
		for( int i = 0; i < customerList.size(); i++)
		{
			if (ID.equals(customerList.get(i).getUserID()) )
			{
				customerList.remove(i);
				Customer.setNoOfCustomers((Customer.getNoOfCustomers())-1);
				removed = true;
			}
		}
		return removed;
	}
	
	public void setSalary(double newSalary)
	{
		this.salary = newSalary;
	}
	
	public void setStatus(String newStatus)
	{
		this.status=newStatus;
	}
	public double getSalary()
	{
		return this.salary;
	}
	public String getStatus()
	{
		return this.status;
	}
	
	@Override
	public String toString()
	{
		return super.toString() + "\nStatus: " + this.status + "\nSalary: " + this.salary;
	}

}
