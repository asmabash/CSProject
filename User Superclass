import java.util.Random;

public class User {
	
	// attributes
	private String name;
	private String userID;
	private int age;
	private String email;
	private static int noOfUsers;
	
	//methods
	User(String name, int age, String email)
	{
		this.name = name;
		this.userID = generateID();
		this.age = age;
		this.email = email;
		noOfUsers ++;
	}
	
	// generate a random id for each user
	public String generateID()
	{
		Random rand = new Random();
		return Integer.toString(rand.nextInt());
	}
	
	public String toString()
	{
		 return "\nName: " + this.name + "\nUser ID: " + this.userID + 
				 "\nAge: " + this.age + "\nEmail Address: " + this.email;
	}
	
	public String getUserID()
	{
		return this.userID;
	}
	public String getName()
	{
		return this.name;
	}
	public int getAge()
	{
		return this.age;
	}
	public String getEmail()
	{
		return this.email;
	}
	public static int getnoOfUsers()
	{
		return noOfUsers;
	}
	/*public static void setnoOfUsers(int newnoOfUsers)
	 * {
	 * 		noOfUsers=newnoOfUsers;
	 * }
	 */
	public void setEmail (String newEmail)
	{
		 this.email = newEmail;
		 
	}
	
	
	
	
	
	
	

}
